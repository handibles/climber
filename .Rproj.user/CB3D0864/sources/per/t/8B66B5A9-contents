## get the stuff we use for work

# lapply it (deps for maaslin)
library(BiocManager)   # biocLite deprecated
deps <- c('devtools', 'agricolae', 'gamlss', 'gbm', 'nlme', 'gam', 'glmnet', 'inlinedocs',
          'logging', 'devtools','MASS', 'optparse', 'outliers','penalized', 'pscl', 'robustbase' ,
          'dada2','phyloseq','DESeq2','ggplot2','seqTools','parallel','zCompositions','ALDEx2','compositions',
          'knitr','igraph','phangorn','DECIPHER','ComplexHeatmap','cowplot','shiny','shinythemes','tibble',
          'networkD3','circlize','FSA')

lapply(deps, function(x) install(x, update = FALSE))


